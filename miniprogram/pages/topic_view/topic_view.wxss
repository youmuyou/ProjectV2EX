.container {
  padding: 40rpx;
}

.topic_title {
  font-weight: bold;
  font-size: 50rpx;
}

.topic_content {
  margin-top: 40rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.topic_memberavatar {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx auto;
  display: block;
  border-radius: 50%;
}

.topic_membername {
  color: #aaa;
  display: block;
  text-align: center;
}

.topic_time {
  font-size: 25rpx;
  color: #ccc;
  display: inline-block;
  text-align: center;
  margin: 20rpx 0;
}

.topic_img {
  max-width: 100%;
}
.topic_tip{
  background: #fffbe6;
  color: #5c3b00;
  font-size: 25rpx;
  padding: 10rpx;
}
.topic_replies{
  display: inline-block;
  font-size: 25rpx;
  color: #ffc803;
  margin-left: 16rpx;
}
.topic_topinfo{
  text-align: center;
}
.topic_node{
  font-size: 25rpx;
  color: #296089;
}
.subtle{
  background: #fffbe6;
  border: 2prx solid #fff5c2;
  color: #5c3b00;
  padding: 10rpx;
  margin-bottom: 10rpx;
}
.subtitle{
  font-size: 35rpx;
  font-weight: bold;
  padding: 20rpx 0;
}