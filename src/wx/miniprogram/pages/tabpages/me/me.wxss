/* pages/tabpages/me/me.wxss */

.userinfo {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  margin: 15rpx 0;
}

.userinfo image {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.userinfo text {
  display: flex;
  padding-left: 15rpx;
  font-size: 50rpx;
  font-weight: bold;
}

.userotherinfo {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  margin: 15rpx 0;
}

.userotherinfo>.item {
  display: flex;
  flex: 1;
  text-align: center;
  justify-content: center;
}

.other {
  border-bottom: 1rpx solid #f3f3f2;
  padding-bottom: 10rpx;
}

.item>.bigger {
  font-size: 36rpx;
  font-weight: bold;
}

.item>.name {
  color: #2c2c2c;
  font-size: 30rpx;
}
.actions_title{
  font-size: 45rpx;
  font-weight: bold;
  padding: 30rpx 40rpx;
  background: #f7f9fa;
}
.actions {
}

.actions>view {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  /*box-shadow: 0px 0px 15px rgba(182, 182, 182, 0.199);*/
  border-bottom: 1rpx solid rgba(182, 182, 182, 0.089);
}
.actions>view:hover{
  background: #f7f9fa;
}
.actions>view>image {
  display: flex;
  width: 50rpx;
  height: 50rpx;
  flex: 1;
}

.actions>view>text {
  display: flex;
  color: #2c2c2c;
  flex: 9;
}

.v2ex {
  padding: 0 60rpx;
}

.v2exlogo {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c2c2c;
}

.v2exlogo image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.v2extext {
  font-size: 46rpx;
  font-weight: bold;
  color: #2c2c2c;
  margin-top: 300rpx;
}

.btn-login {
  margin-top: 100rpx;
  background: #ffc803;
  color: #fff;
  font-size: 36rpx;
  padding: 30rpx 0;
  line-height: initial;
  border-radius: 0;
  border: 0;
}

.btn-login::after {
  border-radius: 0;
  border: 0;
}
