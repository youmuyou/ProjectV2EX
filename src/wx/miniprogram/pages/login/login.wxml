<view>登录到V2EX</view>

<form bindsubmit="formSubmit">

  <view class="section">
    <view class="section__title">用户名</view>
    <input name="username" placeholder="请输入用户名" />
  </view>

  <view class="section">
    <view class="section__title">密码</view>
    <input name="password" placeholder="请输入密码" />
  </view>
  <view class="section">
    <view class="section__title">
      <image wx:if='{{checkcode!=""}}' src='{{checkcode}}'></image>
      <image wx:if='{{checkcode==""}}' src='../../images/captcha.png'></image>
    </view>
    <input name="checkcode" placeholder="请输入验证码" />
  </view>
  <view class="btn-area">
    <button form-type="submit">登录</button>
     <button form-type="button" bindtap="updateInfo">刷新页面</button>
  </view>
</form>